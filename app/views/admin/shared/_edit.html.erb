<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>
<% form_tag(form_action.merge({action: 'merge'}), method: 'post') do %>
    <%= label_tag(:other_id, 'Merge with this article') %>
    <%= text_field_tag(:other_id) %>
    <%= submit_tag("Merge With This Article") %>
<% end %>
